<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container ">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" width="200px" />
            <pre class="mt-3"><%= blog.body %></pre>
        </div>

        <div class="container mt-4">

            <img src="<%= blog.createdBy.profileImageURL %>" width="40px" />
            <%= blog.createdBy.fullName %>

        </div>

        <div class="container mt-3">
            <h1>Comments (<%= comments.length %>)</h1>
            <div class="container mt-4">

                <% if (locals.user) { %>
                    <form action="/blog/comment/<%= blog._id %>" method="post">

                        <div class="mb-3">

                            <input type="text" class="form-control" name="content" placeholder="Enter your commnet">

                        </div>


                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                    <% } %>

            </div>

            
            <div class="mt-3">

                <% comments.forEach(element=> { %>

                    <img src="<%= element.createdBy.profileImageURL %>" width="40px" />
                    <%= element.createdBy.fullName %> :
                        <pre><%= element.content %></pre>




                        <% }) %>

            </div>

            <%- include('./partials/script') %>

</body>

</html>